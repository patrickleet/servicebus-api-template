  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/start.mjs",
      "skipFiles": [
        "node_modules/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach To Process",
      "processId": "${command:PickProcess}"
    }
  ]
}